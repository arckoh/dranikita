<%- include('../../partials/navbar.ejs') %>

    <div class="container">
        
      <div class="card">

      
        <div class="card-header">
          <h3>Editando catégoria</h3>
        </div>

        <div class="card-body">
          <form method="POST" class="form-group" action="/categories/update">

            <label>Titulo da catégoria: </label>
            <input placeholder="<%= category.title %>" name="title" class="form-control" value="<%= category.title %>">
            <small class="form-text text-muted">Cuidado com a criação de catégoria ela relaciona todos os artigos &#128552;</small>
            <br>
            <br>
            <input type="hidden" value="<%= category.id %>" name="id">
            <button class="btn btn-success">Validar</button>

          </form>

        </div>
      </div>

    </div>

</body>

