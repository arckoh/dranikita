<%- include('../../partials/header.ejs') %>

<body>

<%- include('../../partials/navbar.ejs') %>

    <div class="container">
        
      <div class="card">

      
        <div class="card-header">
          <h3>Artigo "<%= article.title %>"</h3>
        </div>

        <div class="card-body">
          <form method="POST" class="form-group" action="/articles/update">
            <input type="hidden" value="<%= article.id %>" name="id" %>

            <label>Titulo do artigo: </label>
            <input placeholder="<%= article.title %>" name="title" class="form-control" value="<%= article.title %>">
            <br>
            <label>Contéudo</label>
            <textarea class="form-control" placeholder="Entre o contéudo do artigo" name="body" id="article"><%= article.body %></textarea>
            <br>
            
            <label>Catégoria</label>
            <select name="category" class="form-control">
              <% categories.forEach(category => { %>

                <% if(category.id == article.categoryId) { %> 
                  <option value="<%= category.title %>" selected="<%= category.title %>" ><%= category.title %></option>
                <% }else { %> 
                  <option value="<%= category.title %>"><%= category.title %></option>
                <% } %>
              
              <% }); %>
            </select>


            <br>
            <button class="btn btn-success">Validar</button>

            
          </form>

        </div>
      </div>

    </div>
    

</body>

<%- include('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>

  tinymce.init({
    selector: "#article",
    plugins: 'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table past emoticons',
    language: 'pt_BR'
    
  })
</script>
