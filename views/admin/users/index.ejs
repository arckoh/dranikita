<%- include('../../partials/header.ejs') %>

<body>

  <%- include('../../partials/navbar.ejs') %>

  <div class="container">

    <hr>
    <h2> Usuarios </h2>
    <a class="btn btn-success" href="/admin/users/create">Criar usuario +</a>
    <hr>

    <table class="table table-bordered">

      <thead>
        <tr>
          <th>Id</th>
          <th>Email</th>
        </tr>
      </thead>

      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <th><%= user.id %></th>
            <th><%= user.email %></th>
          </tr>  
        <% }) %>

      </tbody>

    </table>

  </div>

</body>

